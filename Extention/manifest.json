{
    "name": "Pratoy's Ad Blocker",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "action": {
        "default_popup": "/popup.html",
        "default_icon": {
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "css": [],
            "js": ["pratoy.js"]
        }
    ]
}